<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="./js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Home page</title>

    <link href="./css/bootstrap.min.css" rel="stylesheet" />
    <!-- style for light and dark mode start here -->
    <link rel="stylesheet" href="./css/dark-light.css" />
    <!-- style for light and dark mode end here -->

    <!-- Custom styles for this template  start here -->
    <link href="./css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/myStyle.css" />
    <!-- Custom style for this template end here -->
  </head>
  <body>
    <!-- dark-light start here -->
    <%- include('./Components/dark-light.ejs') %>
    <!-- dark-light end here -->

    <main class="d-flex flex-nowrap">
      <!-- sidebar start here -->
      <%- include('./Components/sidebar.ejs', {currentPage: "index"}) %>
      <!-- sidebar end here -->

      <section class="w-100">
        <!-- navbar start here -->
        <%- include('./Components/navbar.ejs') %>
        <!-- navbar end here -->
        <!-- if there is no data start here-->
        <% if (arrayData.length===0) { %>
        <h1 class="text-center mt-5">No data availabl</h1>

        <% } %>
        <!-- if there is no data end here -->
        <!-- if there is data start here -->
        <% if (arrayData.length>0) { %>
        <table
          style="width: 99%"
          class="text-center mx-auto table mt-5 table-striped table-bordered"
        >
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Full Name</th>
              <th scope="col">Gender</th>
              <th scope="col">Country</th>
              <th scope="col">Age</th>
              <th scope="col">Last updated</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% arrayData.forEach((item,index) => { %>
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= item.firstName %> <%= item.lastName %></td>
              <td><%= item.gender %></td>
              <td><%= item.country %></td>
              <td><%= item.age %></td>
              <td><%= moment(item.updatedAt).fromNow()%></td>
              <td>
                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="View details"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="/view/<%= item._id %>"
                  ><i class="bi bi-eye"></i
                ></a>

                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="Edit user"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="/edit/<%= item._id %>"
                >
                  <i class="bi bi-pencil"></i>
                </a>
                <form
                  style="display: inline"
                  action="/edit/<%= item._id %>?_method=DELETE"
                  method="post"
                >
                  <button
                    data-bs-toggle="tooltip"
                    data-bs-title="Delete user"
                    data-bs-placement="top"
                    class="btn btn-danger btn-sm"
                  >
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>

            <% }) %>
          </tbody>
        </table>

        <% } %>
        <!-- if there is data end here -->
      </section>
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
  </body>
</html>
